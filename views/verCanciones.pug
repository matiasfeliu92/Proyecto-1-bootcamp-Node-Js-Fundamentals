doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='https://kit.fontawesome.com/df59baf6b8.js', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    style.
      .img-cancion{
      width: 12vw;
      height: auto;
      }
      .cancion{
      background-color: darksalmon;
      }
    title Document
  body
    .container
        .row
            h1.text-center Escucha las canciones que mas te gustan
            a.btn.btn-primary(href='/') Nueva cancion
            each cancion in results
                .col-md-12.d-flex.flex-row.mt-2.mb-2.justify-content-evenly
                    .cancion.col-md-3.d-flex.flex-row.mt-2.mb-2.justify-content-center.align-items-center
                        img.img-cancion.img-fluid(src='#{cancion.imagen}')
                    .cancion.col-md-4.d-flex.flex-column.mt-2.mb-2.justify-content-evenly.align-items-center
                        h3 #{cancion.titulo} 
                        h4 #{cancion.autor}
                        h4 #{cancion.album} 
                        h4 #{cancion.genero}
                        p #{cancion.duracion}
                    .cancion.col-md-3.d-flex.flex-row.mt-2.mb-2.justify-content-center.align-items-center
                        a.btn.btn-primary(target='blank', href='#{cancion.linkyoutube}')
                        i.bi.bi-file-play-fill
                    .cancion.col-md-2.d-flex.flex-column.mt-2.mb-2.justify-content-evenly.align-items-center
                        a.btn.btn-primary(href='/detalleCancion/#{cancion.id}')
                        i.bi.bi-check2
                        a.btn.btn-primary(onclick='eliminar(#{cancion.id})')
                        i.bi.bi-trash
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
    script(src='https://unpkg.com/sweetalert/dist/sweetalert.min.js')
    script.
      function eliminar(id) {
      swal({
      title: "Are you sure?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
      })
      .then((willDelete) => {
      if (willDelete) {
      window.location = '/eliminar/'+id
      swal("Poof! Your imaginary file has been deleted!", {
      icon: "success",
      });
      }
      })
      }