<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .img-cancion{
        width: 12vw;
        height: auto;
      }

      .cancion{
        background-color: darksalmon;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <a class="btn btn-primary" href="/">Nueva cancion</a>
        <% results.forEach(cancion => { %>
          <div class="cancion col-md-12 d-flex flex-row mt-2 mb-2 justify-content-between align-items-center">
            <img class="img-cancion img-fluid" src= <%= cancion.imagen %> alt="">
            <h3><%= cancion.titulo %> </h3>
            <h4><%= cancion.autor %> </h4>
            <h4><%= cancion.album %> </h4>
            <h4><%= cancion.genero %> </h4>
            <p><%= cancion.duracion %> </p>
            <a class="btn btn-primary" href="/detalleCancion/<%= cancion.id %>">actualizar</a>
            <a class="btn btn-primary" onclick="eliminar(<%= cancion.id %>)">Eliminar</a>
          </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
      function eliminar(id) {
        swal({
          title: "Are you sure?",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        })
        .then((willDelete) => {
          if (willDelete) {
            window.location = '/eliminar/'+id
            swal("Poof! Your imaginary file has been deleted!", {
              icon: "success",
            });
          } 
        })
      }
    </script>
  </body>
</html>
